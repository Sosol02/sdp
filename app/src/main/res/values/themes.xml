<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.1Direction" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/col_primary</item>
        <item name="colorPrimaryVariant">@color/col_primary_variant</item>
        <item name="colorOnPrimary">@color/col_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/col_secondary</item>
        <item name="colorSecondaryVariant">@color/col_secondary_variant</item>
        <item name="colorOnSecondary">@color/col_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.1Direction.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.1Direction.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.1Direction.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>