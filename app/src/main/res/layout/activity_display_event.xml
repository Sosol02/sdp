<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.fragment.home.DisplayEvent">

    <TextView
        android:id="@+id/eventEndTimeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="216dp"
        android:text="@string/textview"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDisplayDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eventNameDisplay" />

    <TextView
        android:id="@+id/eventStartTimeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/textview"
        app:layout_constraintBaseline_toBaselineOf="@+id/eventEndTimeDisplay"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eventNameLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="109dp"
        android:text="No location precised"
        app:layout_constraintBottom_toBottomOf="@+id/eventStartTimeDisplay"
        app:layout_constraintEnd_toEndOf="@+id/eventStartTimeDisplay"
        app:layout_constraintStart_toStartOf="@+id/eventStartTimeDisplay"
        app:layout_constraintTop_toTopOf="@+id/eventNameDisplay" />

    <TextView
        android:id="@+id/eventNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="37dp"
        android:text="@string/textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionDisplay" />

    <TextView
        android:id="@+id/descriptionDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#000000"
        android:text="@string/event_name"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/eventNameDisplay"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDisplay"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="73dp"
        android:onClick="buttonStartEditEvent"
        android:text="@string/edit"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDisplayDelete"
        app:layout_constraintEnd_toStartOf="@+id/buttonDisplayDelete"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDisplayDelete"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="178dp"
        android:onClick="buttonStartDeleteEvent"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDisplay" />

</androidx.constraintlayout.widget.ConstraintLayout>