<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textRecurrencePeriod"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/repeat_every" />

        <EditText
            android:id="@+id/editRecurrenceAmount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/amount"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:textColor="@color/col_on_secondary"
            android:textColorHighlight="@color/col_primary"
            android:textColorHint="@color/col_on_secondary"
            android:textColorLink="@color/col_primary_variant" />

        <Spinner
            android:id="@+id/spinnerRecurrencePeriodType"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

</FrameLayout>