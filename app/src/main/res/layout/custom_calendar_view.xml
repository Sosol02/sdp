<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".navigation.fragment.calendar.CustomCalendarView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background = "@color/white">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id = "@+id/previousBtn"
            android:background="@mipmap/shrek_dab_left"
            android:layout_margin = "10dp"
            android:contentDescription="@string/shrek_left"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:text="@string/currentdate"
            android:id="@+id/currentDate"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id = "@+id/nextBtn"
            android:background="@mipmap/shrek_dab_right"
            android:layout_margin = "10dp"
            android:contentDescription="@string/shrek_right"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mon"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tue"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/wed"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/thur"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fri"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sat"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sun"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            />

    </LinearLayout>


    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridView"
        android:numColumns="7" />


</LinearLayout>